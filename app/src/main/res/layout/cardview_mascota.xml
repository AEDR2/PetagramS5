<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/corner_radius_card"
    android:layout_marginBottom="@dimen/margenIzquierdo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="@color/primary_light"
            android:src="@drawable/cat_acrobat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <ImageButton
                android:id="@+id/btnHueso"
                android:layout_width="@dimen/tamanoHueso"
                android:layout_height="@dimen/tamanoHueso"
                android:background="@mipmap/huesoturquesa"/>


            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Calabazate"
                android:layout_weight="0.91" />

            <TextView
                android:id="@+id/tvRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10"
                android:layout_weight="0.10" />

            <ImageView
                android:id="@+id/ivHueso"
                android:layout_width="@dimen/tamanoHueso"
                android:layout_height="@dimen/tamanoHueso"
                android:src="@mipmap/huesoamarillo" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>