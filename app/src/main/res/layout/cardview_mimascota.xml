<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMiMascota"
    android:layout_width="@dimen/gridMiMascotaAncho"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/corner_radius_card"
    android:layout_marginBottom="@dimen/margenIzquierdo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgMiFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="@color/primary_light"
            android:src="@drawable/cat_acrobat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:id="@+id/tvMiRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="5"
                android:layout_weight="0.91" />

            <ImageView
                android:id="@+id/ivMiHueso"
                android:layout_width="@dimen/tamanoHueso"
                android:layout_height="@dimen/tamanoHueso"
                android:src="@mipmap/huesoamarillo" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>